{{# if products }}
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<ul class="list-group">
				{{# each products}}
				<li class="list-group-item">
					<div style="display: inline-block;">{{ this.item.title }}&nbsp;
					<span class="tag blue">{{ this.qty }}</span></div>&nbsp;
					<span class="label label-success">${{ this.price }}</span>&nbsp;
					<div class="btn-group">
						<button class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" type="button">Action </button>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
							<a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a>
						</div>
					</div>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<strong>Total: {{ totalPrice }}</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<a href="/checkout" class="btn btn-success" type="button">Checkout</a>
		</div>
	</div>
{{ else }}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>No item in cart</h2>
		</div>
	</div>
{{/if}}


